<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblPresentacion"
        android:text="@string/lblPresentacion"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/lblPresentacion"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_photo"/>

    <EditText
        android:id="@+id/txtNombre"
        android:layout_below="@+id/img"
        android:hint="@string/txtNombre"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/txtSueldo"
        android:layout_below="@+id/txtNombre"
        android:hint="@string/txtSueldo"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/btnEnviar"
        android:text="@string/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtSueldo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"/>

</RelativeLayout>