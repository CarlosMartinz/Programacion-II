<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Resector">

    <TextView
        android:id="@+id/lblMuestra"
        android:text="@string/lblMuestra"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/imgReset"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/lblMuestra"
        android:src="@drawable/ic_photo"/>

    <TextView
        android:id="@+id/lblName"
        android:layout_below="@+id/imgReset"
        android:text="@string/lblName"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_below="@+id/imgReset"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="xxx"
        android:layout_toRightOf="@+id/lblName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/lblAFP"
        android:layout_below="@+id/nombre"
        android:hint="@string/lblAFP"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/AFP"
        android:layout_below="@+id/lblName"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="xxx"
        android:layout_toRightOf="@+id/lblAFP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/lblISSS"
        android:layout_below="@+id/lblAFP"
        android:hint="@string/lblISSS"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/ISSS"
        android:layout_below="@+id/lblAFP"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="xxx"
        android:layout_toRightOf="@+id/lblISSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/lblSueldo"
        android:layout_below="@+id/lblISSS"
        android:hint="@string/lblNeto"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:id="@+id/Neto"
        android:layout_below="@+id/lblISSS"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="xxx"
        android:layout_toRightOf="@+id/lblSueldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/btnRegresar"
        android:text="@string/btnRegresar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lblSueldo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"/>


</RelativeLayout>