<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tabs.tabTres">

    <LinearLayout
        android:id="@+id/lineaaar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeee"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblAmong"
                android:text="Among"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtAmong"
                android:layout_width="195dp"
                android:layout_height="236dp"
                android:layout_below="@+id/lblAmong"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="@string/lblAmong" />

            <ImageView
                android:id="@+id/imgAmong"
                android:layout_width="150dp"
                android:layout_height="230dp"
                android:layout_below="@+id/lblAmong"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/txtAmong"
                android:src="@drawable/ic_among_" />

            <ImageView
                android:id="@+id/imgAmong2"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_below="@+id/txtAmong"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_among_us_impostor" />

            <TextView
                android:id="@+id/txtIphone"
                android:layout_width="199dp"
                android:layout_height="167dp"
                android:layout_below="@+id/txtAmong"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/imgAmong2"
                android:layout_toRightOf="@+id/imgAmong2"
                android:text="@string/txtAmongg"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>